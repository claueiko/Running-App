<h1> Add Athlete </h1>

<form method="POST" action="/athlete/add">

    <div class="form-group">
        <label> Name </label>
        <input type="text" name="nameAthlete" class="form-control"/>
    </div>

    <div class="form-group"></div>
        <label> Email Address </label>
        <input type="text" name="emailAddress" class="form-control"/>
    </div>

    <div class="form-group"></div>
    <label> Gender </label>
    <input type="text" name="gender" class="form-control"/>
</div>

    <div class="form-group"></div>
<label> Date of Birth </label>
<input type="text" name="dateOfBirth" class="form-control"/>
</div>

<!-- Add forEach() -->
    <div class="form-group"></div>
        <label> Club </label>
        <select name="club[]" class="form-control">

            <% clubs.forEach(function(club) { %> 
                <option value="<%= club._id>"> <%= club.nameClub %> </option>
            <% }) %>
        </select>

    </div>

    <!-- Add forEach() -->
    <div class="form-group"></div>
        <label> Coach </label>
        <select name="coach[]" class="form-control">

            <% coaches.forEach(function(coach) { %> 
                <option value="<%= coach._id>"> <%= coach.nameCoach %> </option>
            <% }) %>
        </select>

    </div>
<div class="form-group"></div>
<label> Event </label>
<input type="text" name="event" class="form-control"/>
</div>

    <button type="submit" class="btn btn-primary"> Create Athlete </button>
</form>