<h1> Athletes </h1>

<table class="table table-striped">
    <tr>
        <th> Name </th>
        <th> Email Address </th>
        <th> Gender </th>
        <th> Date of Birth </th>
        <th> Club </th>
        <th> Coach </th>
        <th> Event </th>
        <th> Region </th>
        <th> Created At </th>
        <th> Updated At </th>
        <th> Edit </th>
        <th> Delete </th>
    </tr>

    <% athletes.forEach(function(athlete) { %>

        <tr>
            <td><a href="/athlete/detail?id=<%= athlete._id %>"> <%= athlete.nameAthlete %> </a> </td>
            <td><%= athlete.emailAddress %></td>
            <td><%= athlete.gender %></td>
            <td><%= athlete.dateOfBirth %></td>
            <td><%= athlete.club %></td>
            <td><%= athlete.nameCoach %></td>
            <td><%= athlete.event %></td>
            <td><%= athlete.region %></td>
            <td><%= moment(athlete.createdAt).fromNow() %></td>

            <td><a href="/athlete/edit?id=<%= athlete.id %>"> Edit </a> </td>
            <td><a href="/athlete/delete?id=<%= athlete.id %>"> Delete </a> </td>
        </tr>
    <% }) %>
</table>