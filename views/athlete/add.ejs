<section class="coach-page">
<p class="page-title">NEW ATHLETE</p>


<form method="POST" action="/athlete/add" class="form" enctype="multipart/form-data">

    <div class="form-group">
        <label> Name </label>
        <input type="text" name="nameAthlete" class="form-control form-field"/>
    </div><br>

    <div class="form-group">
        <label> Email Address </label>
        <input type="text" name="emailAddress" class="form-control form-field"/>
    </div><br>

    <div class="form-group">
    <label> Gender </label>
    <select name="gender" class="form-control form-field form-field">
        <option value="">Select gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="None">Prefer not to say</option>
    </select>
    </div><br>

    <div class="form-group">
        <label> Date of Birth </label>
        <input type="date" name="dateOfBirth" class="form-control form-field"/>
    </div><br>



    <!-- Add forEach() -->
    <div class="form-group">
        <label> Coach </label>
        <select name="coach" class="form-control form-field">
            <% coaches.forEach(function(coach){ %> 
                <option value="<%= coach._id %>"> <%= coach.nameCoach %> </option>
            <% }) %>
            </select>
    </div><br>


    <div class="form-group">
        <label for="">Region</label>
        <select name="region" class="form-control form-field">
            <% regions.forEach(function (region){ %>
                <option value="<%= region._id %>"> <%= region.nameRegion %> </option>
            <% })  %>
        </select>
    </div><br>

    <!-- Image upload -->
    <label for="">Profile picture</label><br>
    <input type="file" class="form-control-file form-field" id="image" name="image"><br><br>


    <input type="submit" class="submit-button" name="Create Athlete"></input>
</form>
</section>