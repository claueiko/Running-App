
<section class="club-page">
    <p class="page-title">NEW CLUB</p>
    
    <form action="/club/add" method="POST" class="form">
    
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" name="nameClub" id="" class="form-control form-field">
        </div><br>
    
    
        <div class="form-group">
            <label for="">Email Address</label>
            <input type="text" name="emailAddressClub" id="" class="form-control form-field">
        </div><br>
    
         <div class="form-group">
            <label for="">Club Website</label>
            <input type="text" name="linkClub" id="" class="form-control form-field">
        </div><br>
    
        <!-- We may want to use a dropdown for the region similar to coach/add.js -->
        <div class="form-group">
            <label for="">Region</label>
            <select name="region[]" id="" class="form-control form-field">
                <% regions.forEach(function (region){ %>
                    <option value="<%= region._id %>"> <%= region.nameRegion %> </option>
                <% })  %>
            </select>
        </div><br>

        <!-- coaches -->
    <div class="form-group">
            <label for="">Coaches</label>
            <select name="coach[]" id="" class="form-control form-field">
                <% coaches.forEach(function (coach){ %>
                    <option value="<%= coach._id %>"> <%= coach.nameCoach %> </option>
                <% })  %>
            </select>
        </div><br>

